<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1240AB"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <!-- FUNCTIONAL BUTTONS -->

    <!-- NUMBER BUTTONS -->

    <Button
        android:id="@+id/two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/one"
        android:layout_alignBottom="@+id/one"
        android:layout_toRightOf="@+id/one"
        android:background="#6C8CD5"
        android:textSize="25sp"
        android:text="2" />
    <!-- =============================================================== SCREEN== -->

    <TextView
        android:id="@+id/screen"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:layout_marginTop="21dp"
        android:background="#66FFFF"
        android:hint="Screen"
        android:textColor="#000000" />
        
    <Button
        android:id="@+id/three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/two"
        android:layout_alignBottom="@+id/two"
        android:layout_toRightOf="@+id/two"
        android:background="#6C8CD5"
        android:textSize="25sp"
        android:text="3" />

    <Button
        android:id="@+id/four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/two"
        android:layout_toLeftOf="@+id/two"
        android:background="#6C8CD5"
        android:textSize="25sp"
        android:text="4" />

    <Button
        android:id="@+id/five"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/two"
        android:layout_toRightOf="@+id/one"
        android:background="#6C8CD5"
        android:textSize="25sp"
        android:text="5" />

    <Button
        android:id="@+id/seven"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/four"
        android:layout_toLeftOf="@+id/five"
        android:background="#6C8CD5"
        android:textSize="25sp"
        android:text="7" />

    <Button
        android:id="@+id/six"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/seven"
        android:layout_alignLeft="@+id/three"
        android:background="#6C8CD5"
        android:textSize="25sp"
        android:text="6" />

    <Button
        android:id="@+id/nine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/seven"
        android:layout_alignBottom="@+id/seven"
        android:layout_toRightOf="@+id/five"
        android:background="#6C8CD5"
        android:textSize="25sp"
        android:text="9" />

    <Button
        android:id="@+id/eight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/five"
        android:layout_toLeftOf="@+id/six"
        android:background="#6C8CD5"
        android:textSize="25sp"
        android:text="8" />

    <Button
        android:id="@+id/one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/screen"
        android:layout_centerVertical="true"
        android:background="#6C8CD5"
        android:text="1"
        android:textSize="25sp" />

    <Button
        android:id="@+id/zero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seven"
        android:layout_toLeftOf="@+id/eight"
        android:background="#6C8CD5"
        android:text="0"
        android:textSize="25sp" />

    <Button
        android:id="@+id/subtract"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/nine"
        android:layout_alignLeft="@+id/add"
        android:background="#6C8CD5"
        android:text="-"
        android:textSize="25sp" />

        <Button
            android:id="@+id/multiply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/subtract"
            android:layout_below="@+id/subtract"
            android:background="#6C8CD5"
            android:text="x"
            android:textSize="25sp" />

        <Button
            android:id="@+id/equal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/zero"
            android:layout_alignBottom="@+id/zero"
            android:layout_alignRight="@+id/nine"
            android:layout_marginRight="18dp"
            android:background="#6C8CD5"
            android:text=" = " />

        <Button
            android:id="@+id/exp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/screen"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:background="#6C8CD5"
            android:text="^"
            android:textSize="25sp" />

        <Button
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/screen"
            android:layout_alignTop="@+id/three"
            android:background="#6C8CD5"
            android:text=" + " />

        <Button
            android:id="@+id/divide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/equal"
            android:layout_marginTop="26dp"
            android:layout_toRightOf="@+id/exp"
            android:background="#6C8CD5"
            android:text="/"
            android:textSize="25sp" />

        <Button
            android:id="@+id/clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/divide"
            android:background="#6C8CD5"
            android:text="cls" />

</RelativeLayout>