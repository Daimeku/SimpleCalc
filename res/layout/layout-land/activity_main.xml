<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#87CA9B"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <!-- FUNCTIONAL BUTTONS -->

    <!-- NUMBER BUTTONS -->

        <Button
            android:id="@+id/clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/equal"
            android:layout_alignBottom="@+id/equal"
            android:layout_marginRight="12dp"
            android:layout_toLeftOf="@+id/add"
            android:background="@drawable/opbg"
            android:text="cls"
            android:textSize="20" />

        <Button
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/equal"
            android:layout_alignLeft="@+id/equal"
            android:background="@drawable/opbg"
            android:text=" + "
            android:textSize="20" />

        <Button
            android:id="@+id/subtract"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/add"
            android:layout_toRightOf="@+id/clear"
            android:background="@drawable/opbg"
            android:text="-"
            android:textSize="20" />

        <Button
            android:id="@+id/three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/clear"
            android:layout_alignLeft="@+id/clear"
            android:background="@drawable/numbg"
            android:text="3"
            android:textSize="20" />

        <Button
            android:id="@+id/decimal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/clear"
            android:layout_alignBottom="@+id/clear"
            android:layout_toLeftOf="@+id/clear"
            android:background="@drawable/opbg"
            android:text="."
            android:textSize="20" />

        <Button
            android:id="@+id/zero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/three"
            android:layout_toLeftOf="@+id/decimal"
            android:background="@drawable/numbg"
            android:text="0"
            android:textSize="20" />

        <Button
            android:id="@+id/two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/clear"
            android:layout_toLeftOf="@+id/clear"
            android:background="@drawable/numbg"
            android:text="2"
            android:textSize="20" />

        <Button
            android:id="@+id/one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/decimal"
            android:layout_toLeftOf="@+id/decimal"
            android:background="@drawable/numbg"
            android:text="1"
            android:textSize="20" />

        <Button
            android:id="@+id/five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/three"
            android:layout_toLeftOf="@+id/three"
            android:background="@drawable/numbg"
            android:text="5"
            android:textSize="20" />

        <Button
            android:id="@+id/four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/one"
            android:layout_alignLeft="@+id/one"
            android:background="@drawable/numbg"
            android:text="4"
            android:textSize="20" />

        <Button
            android:id="@+id/six"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/three"
            android:layout_toRightOf="@+id/two"
            android:background="@drawable/numbg"
            android:text="6"
            android:textSize="30dp" />

        <Button
            android:id="@+id/eight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/five"
            android:layout_toRightOf="@+id/four"
            android:background="@drawable/numbg"
            android:text="8"
            android:textSize="20" />

        <Button
            android:id="@+id/nine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/six"
            android:layout_alignLeft="@+id/six"
            android:background="@drawable/numbg"
            android:text="9"
            android:textSize="20" />

        <Button
            android:id="@+id/seven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/four"
            android:layout_alignLeft="@+id/four"
            android:background="@drawable/numbg"
            android:text="7"
            android:textSize="20" />

        <Button
            android:id="@+id/exp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/eight"
            android:layout_toRightOf="@+id/seven"
            android:background="@drawable/opbg"
            android:text="^"
            android:textSize="20" />

        <Button
            android:id="@+id/divide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/eight"
            android:layout_toRightOf="@+id/eight"
            android:background="@drawable/opbg"
            android:text="/"
            android:textSize="20" />

        <Button
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/divide"
            android:layout_alignBottom="@+id/divide"
            android:layout_alignLeft="@+id/multiply"
            android:background="@drawable/opbg"
            android:text="del"
            android:textSize="20" />

        <Button
            android:id="@+id/multiply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/nine"
            android:layout_alignBottom="@+id/nine"
            android:layout_alignLeft="@+id/subtract"
            android:background="@drawable/opbg"
            android:text="x"
            android:textSize="20" />

        <TextView
            android:id="@+id/screen"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/screen"
            android:gravity="center"
            android:hint="Screen"
            android:textColor="#000000" />

        <Button
            android:id="@+id/lparenth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/screen"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:text="("
            android:textSize="20" />

          <Button
              android:id="@+id/rparenth"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentTop="true"
              android:layout_centerHorizontal="true"
              android:text=")"
              android:textSize="20" />

          <Button
              android:id="@+id/equal"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentBottom="true"
              android:layout_marginLeft="19dp"
              android:layout_toRightOf="@+id/screen"
              android:background="@drawable/opbg"
              android:text="="
              android:textSize="20" />

</RelativeLayout>